{
  "name": "@my-app/web-main",
  "version": "1.0.0",
  "description": "A decentralized course trading platform built on Ethereum blockchain with IPFS storage",
  "main": "index.ts",
  "scripts": {
    "client:dev": "webpack --mode development",
    "client:prod": "webpack --mode production",
    "client:server": "webpack serve --mode development --open",
    "verify:build": "node scripts/verify-build.js",
    "test:e2e": "cypress open",
    "test": "jest tests/unit --collectCoverage --reporters default jest-stare",
    "lint": "biome lint ./src",
    "format": "biome format --write ./src",
    "check": "biome check --write ./src",
    "typechain": "typechain --target ethers-v6 --out-dir src/typechain-types 'abis/*.json'",
    "typechain:watch": "typechain --target ethers-v6 --out-dir src/typechain-types 'abis/*.json' --watch"
  },
  "keywords": [
    "web3",
    "ethereum",
    "blockchain",
    "react",
    "typescript",
    "wagmi",
    "ipfs",
    "dapp",
    "defi",
    "education"
  ],
  "author": "<hahazuo460@gmail.com>",
  "license": "ISC",
  "repository": {
    "type": "git",
    "url": "https://github.com/zuojipeng/my-frontend-arch.git"
  },
  "bugs": {
    "url": "https://github.com/zuojipeng/my-frontend-arch/issues"
  },
  "homepage": "https://github.com/zuojipeng/my-frontend-arch#readme",
  "engines": {
    "node": ">=20.0.0",
    "npm": ">=9.0.0"
  },
  "jest-stare": {
    "coverageLink": "../test-coverge/lcov-report/index.html",
    "resultDir": "docs/jest-stare"
  },
  "devDependencies": {
    "@biomejs/biome": "2.3.8",
    "@swc/core": "^1.15.3",
    "@swc/jest": "^0.2.39",
    "@typechain/ethers-v6": "^0.5.1",
    "@types/jest": "^30.0.0",
    "@types/node": "^24.10.2",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "css-loader": "^7.1.2",
    "cypress": "^15.7.1",
    "dotenv": "^17.2.3",
    "ethers": "^6",
    "html-webpack-plugin": "^5.6.5",
    "jest": "^30.2.0",
    "jest-stare": "^2.5.3",
    "mini-css-extract-plugin": "^2.9.4",
    "postcss-loader": "^8.2.0",
    "selenium-webdriver": "^4.39.0",
    "swc-loader": "^0.2.6",
    "terser-webpack-plugin": "^5.3.10",
    "typechain": "^8.3.2",
    "typescript": "^5.9.3",
    "webpack": "^5.103.0",
    "webpack-cli": "^6.0.1",
    "webpack-dev-server": "^5.2.2",
    "webpack-merge": "^6.0.1",
    "yargs-parser": "^22.0.0"
  },
  "dependencies": {
    "@tailwindcss/postcss": "^4.1.17",
    "@tanstack/react-query": "^5.90.12",
    "@wagmi/core": "^3.0.0",
    "@zuojipeng/my-libs": "workspace:*",
    "@zuojipeng/my-hooks": "workspace:*",
    "axios": "^1.13.2",
    "immer": "^11.0.1",
    "jszip": "^3.10.1",
    "postcss": "^8.5.6",
    "react": "^19.2.1",
    "react-dom": "^19.2.1",
    "react-router-dom": "^7.10.0",
    "tailwindcss": "^4.1.17",
    "viem": "^2.41.2",
    "wagmi": "^3.1.0"

{
  "name": "@zuojipeng/my-ui",
  "version": "1.0.0",
  "description": "基于 React + TypeScript + Tailwind 的 UI 组件库",
  "type": "module",
  "main": "./dist/index.cjs",
  "module": "./dist/index.mjs",
  "types": "./dist/index.d.ts",
  "exports": {
    ".": {
      "import": "./dist/index.mjs",
      "require": "./dist/index.cjs",
      "types": "./dist/index.d.ts"
    },
    "./styles.css": "./dist/styles.css"
  },
  "files": [
    "dist"
  ],
  "scripts": {
    "build": "pnpm run build:css && tsup src/index.ts --format esm,cjs --dts --clean --out-dir dist",
    "build:css": "pnpm exec tailwindcss -i src/styles.css -o dist/styles.css --minify",
    "dev": "tsup src/index.ts --format esm,cjs --dts --watch --out-dir dist",
    "dev:css": "pnpm exec tailwindcss -i src/styles.css -o dist/styles.css --watch",
    "lint": "tsc --noEmit",
    "prepublishOnly": "pnpm build"
  },
  "keywords": [],
  "author": "",
  "license": "ISC",
  "peerDependencies": {
    "react": "^19.0.0",
    "react-dom": "^19.0.0"
  },
  "dependencies": {
    "clsx": "^2.1.1"
  },
  "devDependencies": {
    "@tailwindcss/cli": "^4.1.18",
    "@types/react": "^19.2.7",
    "@types/react-dom": "^19.2.3",
    "autoprefixer": "^10.4.20",
    "postcss": "^8.5.6",
    "tailwindcss": "^4.1.17",
    "tsup": "^8.3.5",
    "typescript": "^5.9.3",
    "vite": "^5.4.11"
  },
  "packageManager": "pnpm@10.26.0"
}
